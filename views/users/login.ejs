<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-2">Login in to WanderLust</h1>
    <div class="col-6 offset-2">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input name="username"
            id="username"
             type="text"
              class="form-control"
              required>
             
        </div> 

            <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input name="password"
            id="password"
             type="password"
              class="form-control"
              required>
              
        </div>  
        <button class="btn btn-success" >Login</button>
        </form>
        
        <div class="mt-4">
            <p class="text-center text-muted mb-3">Or continue with</p>
            <a href="/auth/google" class="btn w-100" style="background-color: #ffffff; border: 1px solid #dadce0; color: #3c4043; font-weight: 500; padding: 10px; transition: background-color 0.2s;" onmouseover="this.style.backgroundColor='#f8f9fa'" onmouseout="this.style.backgroundColor='#ffffff'">
                <i class="fab fa-google" style="color: #4285f4; margin-right: 8px;"></i> Sign in with Google
            </a>
        </div>
        </div>
    </div>